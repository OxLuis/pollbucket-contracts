{
  "name": "pollbucket-contracts",
  "version": "1.0.0",
  "description": "Smart contracts para la plataforma PollBucket",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "node": "hardhat node",
    "deploy:modular:local": "hardhat run scripts/deploy-modular.js --network hardhat",
    "deploy:modular:fuji": "hardhat run scripts/deploy-modular.js --network fuji",
    "deploy:modular:avalanche": "hardhat run scripts/deploy-modular.js --network avalanche",
    "setup:local": "hardhat run scripts/setup-platform.js --network hardhat",
    "setup:fuji": "hardhat run scripts/setup-platform.js --network fuji",
    "setup:avalanche": "hardhat run scripts/setup-platform.js --network avalanche",
    "test:flow:local": "hardhat run scripts/test-flow.js --network hardhat",
    "test:flow:fuji": "hardhat run scripts/test-flow.js --network fuji",
    "test:flow:avalanche": "hardhat run scripts/test-flow.js --network avalanche",
    "deployment:latest": "node scripts/deployment-history.js latest",
    "deployment:history": "node scripts/deployment-history.js history",
    "deployment:compare": "node scripts/deployment-history.js compare",
    "deployment:clean": "node scripts/deployment-history.js clean",
    "verify": "hardhat verify --network",
    "help": "node scripts/help.js",
    "full:deploy:local": "npm run deploy:modular:local && npm run setup:local",
    "full:deploy:fuji": "npm run deploy:modular:fuji && npm run setup:fuji",
    "full:deploy:avalanche": "npm run deploy:modular:avalanche && npm run setup:avalanche",
    "quick:test:local": "npm run full:deploy:local && npm run test:flow:local",
    "quick:test:fuji": "npm run full:deploy:fuji && npm run test:flow:fuji"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "hardhat": "^2.17.0",
    "dotenv": "^16.3.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3"
  }
}