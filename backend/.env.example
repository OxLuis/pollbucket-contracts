# ===========================================
# CONFIGURACIÓN DEL BACKEND POLLBUCKET
# ===========================================

# Base de datos PostgreSQL
DATABASE_URL="postgresql://usuario:password@localhost:5432/pollbucket?schema=public"

# Servidor
PORT=3001
NODE_ENV=development

# Blockchain - Red a usar (hardhat, fuji, avalanche)
BLOCKCHAIN_NETWORK=fuji

# RPC URLs
HARDHAT_RPC_URL=http://127.0.0.1:8545
FUJI_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc

# Direcciones de contratos (copiar de deployments/)
POLL_POOL_ADDRESS=0x...
REPUTATION_SYSTEM_ADDRESS=0x...
JURY_SYSTEM_ADDRESS=0x...

# Bloque inicial para sincronización (bloque donde se desplegaron los contratos)
SYNC_START_BLOCK=0

# Upload de imágenes
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# URL pública para imágenes (cambiar en producción)
PUBLIC_URL=http://localhost:3001

# CORS - Orígenes permitidos (separados por coma)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logs
LOG_LEVEL=info

# Admin (para endpoints de sincronización protegidos)
ADMIN_KEY=tu-clave-secreta-aqui

